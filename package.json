{
  "private": true,
  "name": "root",
  "description": "Monorepo. More detailed: https://en.wikipedia.org/wiki/Monorepo",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "watch": "tsc -b packages --watch",
    "compile": "tsc -b packages",
    "clean": "tsc -b packages --clean",
    "prepublishOnly": "run-s clean compile",
    "lint-staged": "lint-staged",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "23.3.13",
    "babel-eslint": "10.0.1",
    "eslint": "5.12.0",
    "eslint-config-prettier": "4.0.0",
    "eslint-formatter-pretty": "2.1.1",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-prettier": "3.0.1",
    "@typescript-eslint/eslint-plugin": "1.1.1",
    "husky": "1.3.1",
    "jest": "24.0.0",
    "lerna": "3.10.7",
    "lerna-changelog": "0.8.2",
    "lint-staged": "8.1.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.16.3",
    "ts-jest": "23.10.5",
    "typescript": "3.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s test lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --format=pretty --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
