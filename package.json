{
  "name": "@zero-scriptsjs/monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "tsc -b packages",
    "prepublishOnly": "run-s remove-build build",
    "remove-build": "rimraf packages/*/build packages/*/*.tsbuildinfo",
    "test": "jest",
    "watch": "tsc -b packages --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpx lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,md,json}": [
      "prettier --write"
    ],
    "*.{js,ts,jsx,tsx}": [
      "eslint --format=pretty --fix"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "esbuild": "^0.8.21",
    "esbuild-jest": "^0.3.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "get-port": "^5.1.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lerna-changelog": "1.0.1",
    "lint-staged": "^10.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.0",
    "prettier-plugin-packagejson": "^2.2.8",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2"
  },
  "engines": {
    "yarn": "2.x"
  }
}
