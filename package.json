{
  "private": true,
  "name": "root",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "lerna run --parallel build",
    "watch": "lerna run --parallel watch",
    "lint-staged": "lint-staged",
    "test": "jest"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "@types/jest": "^23.3.10",
    "eslint": "^5.11.1",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-typescript": "^1.0.0-rc.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lerna": "^3.8.0",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.2",
    "lerna-changelog": "^0.8.2",
    "eslint-formatter-pretty": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s test lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --format=pretty --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
