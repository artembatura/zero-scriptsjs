{
  "name": "example.react-astroturf",
  "private": true,
  "scripts": {
    "start": "run start",
    "build": "run build"
  },
  "dependencies": {
    "astroturf": "0.10.4",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "@zero-scripts/core": "workspace:*",
    "@zero-scripts/plugin-webpack-babel": "workspace:*",
    "@zero-scripts/plugin-webpack-css": "workspace:*",
    "@zero-scripts/plugin-webpack-react": "workspace:*",
    "@zero-scripts/plugin-webpack-spa": "workspace:*",
    "@zero-scripts/plugin-webpack-eslint": "workspace:*"
  },
  "zero-scripts": {
    "workspace": [
      "@zero-scripts/plugin-webpack-spa",
      "@zero-scripts/plugin-webpack-react",
      "@zero-scripts/plugin-webpack-babel",
      "@zero-scripts/plugin-webpack-css"
    ],
    "plugin-webpack-babel": {
      "jsLoaders": [
        {
          "loader": "astroturf/loader",
          "options": {
            "extension": ".astro.css"
          }
        }
      ]
    },
    "plugin-webpack-css": {
      "styleLoaders": [
        {
          "test": "\\.astro\\.css",
          "loader": "astroturf/css-loader"
        }
      ]
    }
  }
}
